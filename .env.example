# === ОСНОВНЫЕ НАСТРОЙКИ ===
# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# Имя бота (без @)
BOT_USERNAME=your_bot_username_here

# Домен для продакшена (настройте в @BotFather)
DOMAIN=https://yourdomain.com

# === БАЗА ДАННЫХ ===
# URL подключения к PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# === БЕЗОПАСНОСТЬ ===
# Проверка подписи Telegram (true для продакшена, false для разработки)
VERIFY_TELEGRAM_SIGNATURE=true

# === РЕЖИМ РАЗРАБОТКИ ===
# Включить локальную авторизацию (true для localhost)
LOCAL_DEV_MODE=false

# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Порт для запуска (по умолчанию 8000)
PORT=8000